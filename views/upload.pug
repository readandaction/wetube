extends layouts/main 

block content
    .form__container
        form(action=`/videos${routes.upload}`, method="post",  enctype="multipart/form-data")
            label(for="file") Video File
            input(type="file", id="file", name="videoFile", require=true, accept="video/*" )
            input(type="text", placeholder="title", name="title", require=true)
            textarea(name="description", placeholder="Description",require=true)
            input(type="submit", value="Video Upload")